<script>
var wd=["The","If","For","Like","Or","And","Then","To","Not"]
function remove_(id){  
  
var c=document.getElementById(id).innerHTML;
var j=0;
var cc=c;
while(cc.includes("_")){
for(i=0;i<c.length;i++)
if(c[i]=="_")
{j=i;}
cc=c.substr(j+1, c.length); 

}
document.getElementById(id).innerHTML=cc;
document.querySelector("#"+id).innerText = document.querySelector("#"+id).innerText.toLowerCase().replace(/\b(\w)/g, x => x.toUpperCase());
cc=document.querySelector("#"+id).innerText;
if(cc.substr(0,4)=="The "){
  cc=cc.substr(4,cc.length);
document.querySelector("#"+id).innerText=cc;
}
for(i=0;i<wd.length;i++)
if(cc.includes(wd[i]+" ")){
document.getElementById(id).innerHTML=cc.replace(wd[i],"<span style=' text-transform: lowercase;'>"+wd[i]+"</span>");
}

document.getElementById("div_rec").style.marginBottom="10px";
document.getElementById("div_rec").style.marginTop="10px";
}
</script>

