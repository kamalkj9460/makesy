<!-- Bulk Discounts percent and quantiy Arrays -->
{% assign quantityArr = product.metafields.bulk_discount.quantity | split: ',' %}
{% assign percentArr = product.metafields.bulk_discount.percent | split: ',' %}


<!-- Right Column of PDP product page shows bulk discounts menu only -->
{% if itemFor == "right_column" and hasBulkDiscounts %}
    <accordian-nav class="c-accordian__menu PDP__desktop">
        <div class="accordian__menu_items">
            <h3 class="menu_item">bulk discounts</h3>
            <div>
                {% if product.handle contains 'wick' %}
                    <p>Buy 10, Receive 10% off for 10 Packs of 1000</p>
                    <p>Buy 50, Receive 15% off for 50 Packs of 1000</p>
                {% else %}
                    {% for quantity in quantityArr %}
                        {% assign percent = percentArr[forloop.index0] %}
                        <p>Buy {{quantity}}, Save {{percent}}%</p>
                    {% endfor %}
                {% endif %}
                <p>Discount will automatically apply to qualifying quantities at checkout.</p>
            </div>
            <span class="nav_state">
                <span></span>
                <span></span>
            </span>
        </div>
    </accordian-nav>
{% endif %}
<!-- Left Column of PDP product page shows bulk discounts menu -->
{% if itemFor != "right_column" %}
    <accordian-nav class="c-accordian__menu"> 
        {%- if product.metafields.product.details -%}
            <div class="accordian__menu_items">
                <h3 class="menu_item --open">more information</h3>
                <div class="PDP-more-information">
                    {{ product.metafields.product.details | newline_to_br }}
                </div>
                <span class="nav_state">
                    <span></span>
                    <span></span>
                </span>
            </div>
        {% endif %}
        <!-- Bulk Discounts -->
        {% if hasBulkDiscounts %}
            <div class="accordian__menu_items  PDP__mobile">
                <h3 class="menu_item">bulk discounts</h3>
                <div>
                    <p>
                        {% if product.handle contains 'wick' %}
                            <p>Buy 10, Receive 10% off for 10 Packs of 1000</p>
                            <p>Buy 50, Receive 15% off for 50 Packs of 1000</p> 
                        {% else %}
                            {% for quantity in quantityArr %}
                                {% assign percent = percentArr[forloop.index0] %}
                                <p>Buy {{quantity}}, Save {{percent}}%</p>
                            {% endfor %}
                        {% endif %}
                        <p>Discount will automatically apply to qualifying quantities at checkout.</p>
                    </p>
                </div>
                <span class="nav_state">
                    <span></span>
                    <span></span>
                </span>
            </div>
        {% endif %}
        <!-- Helpful rescources -->
        {%- if tabs[resources_key] -%}
            <div class="accordian__menu_items">
                <h3 class="menu_item">helpful resources</h3>
                <div class="PDP-helpful_resources">
                    {{ tabs[resources_key] | newline_to_br }}
                </div>
                <span class="nav_state">
                    <span></span>
                    <span></span>
                </span>
            </div>
        {%- endif -%}
        <!-- Functional Fragrance -->
        {% if product.tags contains "functional-fragrance" %}
            {% assign index = 0 %}
            <div class="accordian__menu_items">
                <h3 class="menu_item">functional fragrance</h3>
                <div>
                    {% for src in function_fragrances %}
                        {% for tag in product.tags %}
                            {% if src contains tag %}
                                <div class="PDP-icon-content">
                                    <a href="/pages/fragrance-and-essential-oil-benefits" target="_blank">
                                        <img src="{{function_fragrances[index]}}"> 
                                    </a>
                                    <p>{{function_fragrances_description[index]}}</p>
                                </div>
                                {% assign index = index | plus: 1 %}
                                {%break%}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </div>
                <span class="nav_state">
                    <span></span>
                    <span></span>
                </span>
            </div>
        {% endif %}
        <!-- Made Better -->
        {% if imgs.size > 0 %}
            <div class="accordian__menu_items">
                <h3 class="menu_item">made better</h3>
                <div class="PDP-made-better">
                    {% for link in imgs %}
                        <div class="PDP-icon-content">
                            <a href="/pages/makesy-made-better" target="_blank">
                                <img  src="{{link}}"> 
                            </a>
                            <p>{{content[forloop.index0]}}</p>
                        </div>
                    {% endfor %}
                </div>
                <span class="nav_state">
                    <span></span>
                    <span></span>
                </span>
            </div>
        {% endif %}
    </accordian-nav>
{% endif %}

