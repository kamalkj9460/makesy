/* Maker Pro Upsell */
.Maker-pro__modal {
    position: fixed;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0);
    transform-origin: center;
    top: 50%;
    left: 50%;
    justify-content: center;
    bottom: 1px;
    margin: 0 auto;

    @include breakpointMax($breakpoint-md) {
        width: 96%;
    }

    width: 70%;
    max-width: 880px;
    border: 0px solid #1c1b1b;
    background-color: #fbf6f0;
    border-radius: 30px;
    background-color: #fff;
    z-index: 100;
    display: table;
    transition: transform .35s ease-in-out,
    opacity .25s ease-in-out;

    .Maker-pro__close-modal {
        display: flex;
        justify-content: flex-end;
        cursor: pointer;
        width: calc(100% - 45px);
        position: absolute;
        top: 30px;
        right: 30px;

        @include breakpointMax($breakpoint-md) {
            top: 15px;
            right: 18px;
        }

        &::after {
            content: "\2715";

            @include breakpointMax($breakpoint-md) {
                font-size: 21px;
            }

            font-size: 25px;
            line-height: 18px;
        }
    }

    .Maker-pro__content {
        display: flex;
        align-items: center;

        @include breakpointMax($breakpoint-md) {
            margin: 35px 16px;
        }

        margin: 81px 60px;
    }

    .content-layout {
        @include breakpointMin(400px) {
            display: flex;
        }

        align-items: center;
        gap: 1rem;

        .content-layout-left {
            width: 100%;
            max-width: 340px;
            border-radius: 30px;
            overflow: hidden;
            flex-basis: 85%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;

            img {
                @include breakpointMax($breakpoint-sm) {
                    max-width: 150px;
                }
            }
        }

        .content-layout-right {
            flex-basis: 100%;
        }

        h2 {
            display: block;
            margin-bottom: 4px;
            font-family: GT-Eesti;
            text-transform: lowercase !important;
            letter-spacing: .05em;
            font-size: 25px;
            color: #222;
            line-height: 23px;
            padding-bottom: 27px;
            margin-bottom: 15px;
            border-bottom: 0.5px solid grey;

            @include breakpointMax($breakpoint-sm) {
                padding-bottom: 14px;
            }

        }

        p.Maker-pro__price {
            font-family: Futura-PT-Medium, sans-serif;
            font-size: 18px;
        }

        p.Maker-pro__description {
            font-family: Futura-PT-Light, sans-serif;
            color: #777;
            margin: 24px 0;
            text-align: left;

            @include breakpointMax($breakpoint-sm) {
                font-size: 14px;
                line-height: 21px;
            }

            font-size: 16px;
            line-height: 24px;
        }
    }

    .Maker-pro-submit {
        width: 100%;
        color: #222;
        font-size: 16px;
        text-transform: lowercase;
        background: #ebbaa3;
        border-radius: 30px;
        height: 40px;
        font-family: Futura-PT-Medium, sans-serif;
        margin-bottom: 15px;
