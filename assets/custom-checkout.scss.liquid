// @DO: custom styles for checkout.liquid
$breakpoint-xs: 0px;
$breakpoint-sm: 600px;
$breakpoint-md: 768px;
$breakpoint-lg: 1200px;
$breakpoint-xl: 1440px;

@mixin breakpointMax($size) {
    @media (max-width: $size) {
        @content;
    }
}

@mixin breakpointMin($size) {
    @media (min-width: $size) {
        @content;
    }
}

@include breakpointMin($breakpoint-md) {
    .__mobile {
        display: none;
    }
}

@include breakpointMax(767px) {
    .__desktop {
        display: none;
    }
}

