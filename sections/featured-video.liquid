    },
    {
	  "type": "header",
	  "content": "Link OR Video URL"
	},
	{
	  "type": "paragraph",
	  "content": "Please enter either a video link OR a regular link. If you enter a YouTube link below, the video will play in place when a customer clicks on the image. If you enter a regular link, a click will take a user to that page. Note that a regular link will override a video link if both are present."
	},
	{
	  "type": "url",
	  "id": "image_2_link_url",
	  "label": "Regular Link"
	},
	{
	  "type": "video_url",
      "accept": ["vimeo", "youtube"],
      "id": "video_url_2",
      "label": "Video URL",
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
	},
  {
    "type": "text",
    "id": "video_title_2",
    "label": "Video Title"
  }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "Featured video",
      "settings": {}
    }
  ]
}
