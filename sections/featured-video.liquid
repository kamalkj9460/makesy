<section class="Section Section--spacingNormal" data-section-type="article-list" id="section-{{ section.id }}"  data-section-id="{{ section.id }}">

  <div class="Container">
    <header class="SectionHeader SectionHeader--center">
	  {%- if section.settings.subheading != blank -%}
		<h3 class="SectionHeader__SubHeading Heading u-h6" style="text-transform: none;">{{ section.settings.subheading | escape }}</h3>
	  {%- endif -%}

	  {%- if section.settings.title != blank -%}
		<h1 class="header__heading">{{ section.settings.title | escape }}</h1>
	  {%- endif -%}
	</header>
	
	<div class="DuelVideo">
	  <div class="DuelVideoWrapper ArticleItem">
	      {%- capture img_1_tag -%}
		  	<a href="/blogs/videos/how-to-make-a-wooden-wick-tea-light">
	      		<img src="{{ section.settings.image_1 | img_url: '850x', format: 'jpg' }}" />
			</a>
	      {%- endcapture -%}
	    	{%- if section.settings.image_1_link_url -%}
	    		<a target="_blank" href="https://www.youtube.com/watch?v=CnC0_dAjBvo">
	    	{%- elsif section.settings.video_url_1 -%}
	    	  {%- assign vidSplit1 = section.settings.video_url_1 | split: "/" -%}
			  {%- capture new_vid_1_url -%}
			    https://youtube.com/embed/{{ vidSplit1.last }} 
			  {%- endcapture -%}
	    		<a onclick="playYouTubeVideo('vid1')" href="javascript:void(0);">
	    	{%- endif -%}
			<a target="_blank" href="https://www.youtube.com/watch?v=CnC0_dAjBvo">
	    			{{ img_1_tag }}
				</a>
	    		</a>
      <div class="CollectionGroupItem__Title Heading VideoTitle">{{ section.settings.video_title_1 }}</div>
	  </div>

	  <div class="DuelVideoWrapper ArticleItem">
	      {%- capture img_2_tag -%}
	      	<img src="{{ section.settings.image_2 | img_url: '850x', format: 'jpg' }}" />
	      {%- endcapture -%}
	    	{%- if section.settings.image_2_link_url -%}
	    		<a href="/blogs/videos/how-to-make-naturally-nourishing-body-butters">
	    	{%- elsif section.settings.video_url_2 -%}
	    	  {%- assign vidSplit2 = section.settings.video_url_2 | split: "/" -%}
			  {%- capture new_vid_2_url -%}
			    https://youtube.com/embed/{{ vidSplit2.last }}
			  {%- endcapture -%}
	    		<a onclick="playYouTubeVideo('vid2'); return false;">
	    	{%- endif -%}
	    			{{ img_2_tag }}
	    		</a>

        <div class="CollectionGroupItem__Title Heading VideoTitle">{{ section.settings.video_title_2 }}</div>
	  </div>
	</div>
	
	{%- if section.settings.link_text != blank -%}
      <div class="SectionFooter FeaturedVideoFooter">
        <a href="{{ section.settings.link_url }}"  class="section-cta gradient-hover-btn">{{ section.settings.link_text | escape }}</a>
      </div>
    {%- endif -%}
	
  </div>

	<iframe style="display: none" id="vid1" class="Image--lazyLoad" data-src="{{ new_vid_1_url | strip }}?autoplay=1&playsinline=1&showinfo=0&controls=1&rel=0&modestbranding=1" frameborder="0" allowfullscreen></iframe>

	<iframe style="display: none" id="vid2" class="Image--lazyLoad" data-src="{{ new_vid_2_url | strip }}?autoplay=1&playsinline=1&showinfo=0&controls=1&rel=0&modestbranding=1" frameborder="0" allowfullscreen></iframe>

</section>

<script>

function playYouTubeVideo(vidNumber) {
  console.log(vidNumber);
  var iframe = document.getElementById(vidNumber);
  iframe.style.display = "block";
  iframe.autoplay = 1;
	iframe.playsinline = 1;

  event.currentTarget.replaceWith(iframe);
}

</script>

<style>
  #section-{{ section.id }},
  #section-{{ section.id }} .Heading {
    color: {{ section.settings.text_color }};
  }
</style>

