{%- assign mobile_menu_handle = section.settings.primary_menu | default: 'mobile-menu' -%}
{%- assign mobile_menu = linklists[mobile_menu_handle] -%}

{% comment %} Build a list of subnav titles specified in the customizer. {% endcomment %}
{%- assign has_subnav = '' -%}
{%- capture subnav_list -%}
  {%- for block in section.blocks -%}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_1 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_2 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_3 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_4 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_5 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_6 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_7 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_8 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_9 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_10 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_11 | append: ',' }}
    {{ has_subnav | append: block.settings.dropdown_submenu_title_12 | append: ',' }}
  {%- endfor -%}
{%- endcapture -%}

{%- assign subnav_check = subnav_list | downcase -%}

<section id="sidebar-menu" class="SidebarMenu Drawer Drawer--small Drawer--fromLeft" aria-hidden="true" data-section-id="{{ section.id }}" data-section-type="sidebar-menu">
    <header class="Drawer__Header" data-drawer-animated-left>
      <button class="Drawer__Close Icon-Wrapper--clickable" data-action="close-drawer" data-drawer-id="sidebar-menu" aria-label="{{ 'header.navigation.close_sidebar' | t }}">
        {%- render 'icon' with 'close' -%}
      </button>
      <div class="Drawer_Header_Div">Hi Maker!</div>
	  <div class="Drawer_Header_Div"><a href="/account">Sign in</a> or <a href="/account/register">Sign up</a></div>
    </header>

    <div class="Drawer__Content">
      <div class="Drawer__Main" data-drawer-animated-left data-scrollable>
        <div class="Drawer__Container">
          <nav class="SidebarMenu__Nav SidebarMenu__Nav--primary" aria-label="{{ 'header.navigation.sidebar_title' | t }}">
            {%- for link in mobile_menu.links -%}
              <div class="Collapsible">
                {%- if link.links != blank -%}
                  <button class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" {% if link.links != blank %}aria-expanded="false"{% endif %}>
                    {{- link.title | escape -}}<span class="Collapsible__Plus"></span>
                  </button>

                  <div class="Collapsible__Inner">
                    <div class="Collapsible__Content ToggleMenuFilterContent">
                      {%- for sub_link in link.links -%}
                        <div class="Collapsible">
                          {%- assign lower_title = sub_link.title | downcase -%}
                          
                          {%- unless subnav_check contains lower_title -%}
                            <a href="{{ sub_link.url }}" class="Collapsible__Button Heading Link Link--primary u-h7">{{ sub_link.title | escape }}</a>
                          {%- else -%} 
                          {% assign tt=sub_link.title | downcase%}
                          {%for itm in shop.metafields.global.menumobile%}
                          {%if itm.item==tt%}
                          {% assign url_item=itm.handle %}
                          {%endif%}
                          {%endfor%}

                           <button   class="Collapsible__Button Heading Link--primary u-h7" data-action="toggle-collapsible" {% if sub_link.links != blank %}aria-expanded="false"{% endif %}>
                              {% if url_item != blank %}<span  date-url-item="{{url_item | downcase}}" >{%endif%} {{- sub_link.title | escape -}}{% if url_item != blank %} </span> {%endif%}<span class="Collapsible__Plus"></span>
                            </button> 
                            {%- include 'mobile-subnav' with activator: sub_link.title  -%}
                          {%- endunless -%}
                        </div>
                      {%- endfor -%}
                    </div>
                  </div>
                {%- else -%}
                  <a class="Collapsible__Button Heading u-h6" href="{{ link.url }}">{{- link.title | escape -}}</a>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </nav>
                          
          {%- assign secondary_menu = linklists[section.settings.secondary_menu] -%}

          <nav class="SidebarMenu__Nav SidebarMenu__Nav--secondary">
            <ul class="Linklist Linklist--spacingLoose">
              {%- for link in secondary_menu.links -%}
                <li class="Linklist__Item">
                  <a class="Collapsible__Button Heading u-h6" href="{{ link.url }}" class="Link Link--primary">{{ link.title | escape }}</a>
                  <ul class="Linklist Linklist--spacingLoose">
                    {%- for sub_link in link.links -%}
                    <li class="Linklist__Item">
                      <a href="{{ sub_link.url }}">{{- sub_link.title | escape -}}</a>
                    </li>
                    {%- endfor -%}
                  </ul>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        </div>
      </div>

      {%- if section.settings.show_social_media -%}
        {%- capture social_media -%}
          {% render 'social-media', class: 'SidebarMenu__Social', spacing: 'fill' %}
        {%- endcapture -%}
      {%- endif -%}

      {%- if social_media != blank -%}
        <aside class="Drawer__Footer" data-drawer-animated-bottom>
          {%- if social_media != blank -%}
            {{ social_media }}
          {%- endif -%}
        </aside>
      {%- endif -%}
    </div>
</section>
<script>
  $('[date-url-item]').click(function(){
   window.location.href="{{shop.url}}/collections/"+$(this).attr("date-url-item");
  })
</script>
